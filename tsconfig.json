{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "strict": true,
        "jsx": "preserve",
        "importHelpers": true,
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "baseUrl": ".",
        "lib": [
            "ESNext",
            "DOM",
            "DOM.Iterable",
            "ScriptHost"
        ],
        "types": ["vuetify"],
        "paths": {
            "@root/*": ["resources/assets/js/*"],
            "@component/*": ["resources/assets/js/components/*"],
            "@sass/*": ["resources/assets/sass/*"]
        },
        "resolveJsonModule": true
    },
    "include": [
        "resources/assets/js/**/*.ts",
        "resources/assets/js/**/*.vue"
    ],
    "exclude": [
        "node_modules"
    ]
}